const {readFileSync, promises: fsPromises} = require('fs');

// Function to read input file into new array
function syncReadFile(filename) {
    const contents = readFileSync(filename, 'utf-8');
    const arr = contents.split(/\r?\n/);
    return arr;
}

// Create results array
function resultsArray() {
    results = {
        "A X": "Z",
        "A Y": "X",
        "A Z": "Y",
        "B X": "X",
        "B Y": "Y",
        "B Z": "Z",
        "C X": "Y",
        "C Y": "Z",
        "C Z": "X"
    };
    return results;
}

//Function to determine how many points for what I played
function symbolPoints(sym) {
    if (sym === 'X') {
        return 1;
    } else if (sym === 'Y') {
        return 2;
    } else {
        return 3;
    }
}

//Function to determine how many points for what I played
function outcomePoints(outcome) {
    if (outcome === 'X') {
        return 0;
    } else if (outcome === 'Y') {
        return 3;
    } else {
        return 6;
    }
}

// Create array
const arr = syncReadFile(__dirname + '/day_2_data.txt');
let totalScore = 0;
let outcome = '';
let symbol = '';
const resultArr = resultsArray();

// Loop through array, add up total score
for (let i = 0; i < arr.length; i++) {
    outcome = arr[i][2];
    symbol = resultArr[arr[i]];
    totalScore += outcomePoints(outcome) + symbolPoints(symbol);
}

console.log("totalScore: " + totalScore);
